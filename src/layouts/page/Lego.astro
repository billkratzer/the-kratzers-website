---
import BaseHead from "../../components/BaseHead.astro";
import NavBar from "../../components/NavBar.astro";

const { frontmatter } = Astro.props;
---

<style>
	#hero {
		background-image: url('/images/lego/lego_rainbow_75_opacity.jpg');
	}
</style>
<html lang="en">
	<BaseHead title="{title}"/>

