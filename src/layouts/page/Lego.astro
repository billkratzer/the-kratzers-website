		<div id="hero" class="px-6 lg:px-8">
			<NavBar/>
			<div class="py-18 sm:py-24 mx-auto max-w-2xl text-center">
				<h1 class="text-3xl font-bold tracking-tight text-white sm:text-9xl">{frontmatter.heroText1}</h1>
				<h2 class="mt-6 text-lg leading-8 text-white">{frontmatter.heroText2}</h2>
			</div>
		</div>
		<div class="bg-gradient-to-b from-yellow-50 to-white border-top border-t-8">
			<div class="mx-auto max-w-2xl text-left min-h-screen">
				<article class="py-4 prose max-w-none prose-stone prose-sm prose-h1:pt-4 prose-h1:mb-0 prose-p:mt-0 prose-h1:text-xl prose-h2:mb-0 prose-h2:text-lg prose-h3:text-sm">
					<slot/>
				</article>
			</div>
		</div>
	</body>

