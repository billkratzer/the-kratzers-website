---
import BaseHead from "../components/BaseHead.astro";
import NavBar from "../components/NavBar.astro";

const posts = await Astro.glob('../pages/posts/*.md');
const tags = [...new Set(posts.map((post) => post.frontmatter.tags).flat())];
---
<html lang="en">
<BaseHead title="Bills Blog"/>

<body class="bg-white">
	<div id="hero" class="px-6 lg:px-8 bg-gradient-to-tr from-blue-950 via-blue-800 to-blue-700">
		<NavBar/>
		<div class="py-18 sm:py-24 mx-auto max-w-2xl text-center">
			<h1 class="text-2xl font-bold tracking-tight text-white sm:text-9xl">Blog</h1>
			<h2 class="mt-6 text-lg leading-8 text-white italic">Football. Programming. Technology. Games.</h2>
		</div>
	</div>
	<div class="border-top border-t-8">
		<div class="mx-auto max-w-2xl text-left">
			<div class="mt-2 text-sm">
				Categories:  { tags.map((tag) => <a class="pl-4 text-blue-900" href={`/tags/${tag}`}>{tag}</a>) }
			</div>
			<slot/>
		</div>
	</div>
</body>

</html>
